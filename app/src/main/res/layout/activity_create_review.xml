<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="1">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/Next_TV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"

                android:text="리뷰 작성"
                android:textSize="16sp"
                android:textColor="#7B7B7B"

                android:background="#ffffff"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="310dp"
                android:paddingBottom="4dp"
                android:id="@+id/CreateReviewEnroll_IV"
                android:src="@drawable/review_enroll"

                />

            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/signup_back"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:id="@+id/createreviewback" />

        </FrameLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--분유선택하는부분-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#EAEAEA">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/searchTV"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:padding="16dp"
                            android:drawableLeft="@drawable/ingredient_search"
                            android:drawablePadding="13dp"
                            android:textCursorDrawable="@null"

                            android:textColor="#57C670"
                            android:textSize="13sp"

                            android:background="@drawable/border"
                            android:singleLine="true">
                        </TextView>

                        <Spinner
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/drymilksp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:layout_centerVertical="true"
                            android:background="#ffffffff"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"></Spinner>

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="250dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ingredient_updown"
                            android:layout_alignTop="@+id/searchTV"
                            android:id="@+id/textView2" />
                    </RelativeLayout>



                </LinearLayout>
                <!--분유선택하는부분(준영오빠가해)-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="106dp"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="16dp"

                        android:id="@+id/CreatereviewDrymilk_IV"
                        android:src="@drawable/home_drymilk_1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="26dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/signup_line"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="8dp"

                                android:id="@+id/CreatereviewDrymilk_TV"

                                android:textColor="#57C670"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:text="그랑노블 "/>

                        </LinearLayout>

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/CreatereviewLevel_TV"-->

                            <!--android:layout_marginLeft="11dp"-->
                            <!--android:layout_marginTop="3dp"-->
                            <!--android:textColor="#67C570"-->
                            <!--android:textSize="13sp"-->
                            <!--/>-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/CreatereviewCompany_TV"

                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="11dp"

                            android:textColor="#67C570"
                            android:textSize="13sp"
                            android:text="파스퇴르"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#EAEAEA" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/review_grade"

                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"

                            android:textColor="#95989A"
                            android:text="평점"
                            android:textSize="14sp"
                            android:textStyle="bold"

                            android:layout_marginLeft="6dp"/>

                        <RatingBar
                            android:id="@+id/CreatereviewGrade_RB"
                            style="@style/customRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5"
                            android:isIndicator="false"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="80dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#EAEAEA" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="21dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/signup_worry"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="아이고민"
                                android:textColor="#95989A"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginLeft="6dp"/>

                            <Button
                                android:layout_width="55dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="45dp"
                                android:id="@+id/nonoCK"
                                android:background="@drawable/signup_no"

                                />

                            <Button
                                android:layout_width="55dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="23dp"
                                android:id="@+id/allergyCK"
                                android:background="@drawable/signup_allergy"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="115dp">

                            <Button
                                android:layout_width="55dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="23dp"
                                android:id="@+id/atopyCk"
                                android:background="@drawable/signup_atopy" />

                            <Button
                                android:layout_width="55dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="23dp"
                                android:id="@+id/bowelCK"
                                android:background="@drawable/signup_bowel" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EAEAEA" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="0.95">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@drawable/review_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="14sp"
                            android:textColor="#67C570"
                            android:textStyle="bold"
                            android:text="한줄평"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="230dp"

                            android:id="@+id/ReviewTitleNum_TV"
                            android:text="0"
                            android:textColor="#67C570"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <!--시간남으면 글자카운팅 시간없으면 지우셈-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="/50"
                            android:textColor="#67C570"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"

                        android:background="@drawable/border"
                        android:id="@+id/CreateReviewTitle_ET"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/review_nice" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="14sp"
                            android:text="좋았던 점"
                            android:textColor="#67C570"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="205dp"

                            android:id="@+id/ReviewGoodNum_TV"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#67C570"
                            android:text="0"/>

                        <!--시간남으면 글자카운팅 시간없으면 지우셈-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#67C570"
                            android:text="/500"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="128dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/border"
                        android:id="@+id/CreateReviewGood_ET"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/review_bad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="14sp"
                            android:textColor="#67C570"
                            android:textStyle="bold"
                            android:text="아쉬웠던 점"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="195dp"

                            android:id="@+id/ReviewBadNum_TV"
                            android:textSize="12sp"
                            android:textColor="#67C570"
                            android:textStyle="bold"
                            android:text="0"/>

                        <!--시간남으면 글자카운팅 시간없으면 지우셈-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#67C570"
                            android:textStyle="bold"
                            android:text="/500"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="7dp"

                        android:background="@drawable/border"
                        android:id="@+id/CreateReviewBad_ET"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/review_tip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#67C570"
                            android:text="꿀팁(선택사항)"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="175dp"
                            android:textSize="12sp"
                            android:id="@+id/ReviewHoneyNum_TV"

                            android:textStyle="bold"
                            android:textColor="#67C570"
                            android:text="0"/>

                        <!--시간남으면 글자카운팅 시간없으면 지우셈-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#67C570"
                            android:text="/200"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="7dp"

                        android:background="@drawable/border"
                        android:id="@+id/CreateReviewHoney_ET"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>