<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="#67C570"
        android:paddingTop="19dp">

        <TextView
            android:id="@+id/ingre_info_gohome"
            android:layout_width="49dp"
            android:layout_height="27dp"
            android:paddingTop="10dp"

            android:layout_marginLeft="18dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/home_logo"
            android:textColor="#000000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbar"
            android:gravity="right">

            <EditText
                android:id="@+id/ingre_info_search"
                android:layout_width="220dp"

                android:layout_height="35dp"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingRight="10dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="5dp"
                android:id="@+id/ingre_info_searchgo"
                android:background="@drawable/home_search" />

        </RelativeLayout>

        <Button
            android:id="@+id/ingre_info_mypage"
            android:layout_width="24dp"
            android:layout_height="23dp"
            android:paddingTop="7dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/home_mypage" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/Next_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:gravity="center"
            android:text="성분 정보"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ingre_info_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/signup_back" />

    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#EAEAEA" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="29dp"

                android:src="@drawable/signup_line" />

            <TextView
                android:id="@+id/ingre_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"

                android:text="비타민 B1"
                android:textColor="#67C570"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/overview_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="20dp"

                android:textSize="12sp"
                android:text="비타민의 한 종류로 티아민이라고도 불린다.\n곡류, 콩, 견과류 등에 함유되어 있다."
                android:textColor="#67C570" />


        </LinearLayout>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandablelist_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#EAEAEA"
        android:dividerHeight="2dp"
        android:groupIndicator="@null"></ExpandableListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#EAEAEA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="20dip"
            android:src="@drawable/ingredient_grade"></ImageView>

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="280dp"
            android:layout_height="45dip"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:text="성분포함 순위"
            android:textColor="#67C570"
            android:textSize="17dip"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/IngredientLIst_BT"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ingredient_add"
            android:gravity="center_vertical|right"></Button>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA" />

    <LinearLayout
        android:id="@+id/Ingredientmilks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/Ingredientmilk01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ingretabrank1_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/drymilk_1_75dp" />

            <TextView
                android:id="@+id/ingretabrank1_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/ingretabrank1_TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Ingredientmilk02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ingretabrank2_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/drymilk_2_75dp" />

            <TextView
                android:id="@+id/ingretabrank2_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/ingretabrank2_TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Ingredientmilk03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ingretabrank3_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/drymilk_3_75dp" />

            <TextView
                android:id="@+id/ingretabrank3_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/ingretabrank3_TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Ingredientmilk04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ingretabrank4_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/drymilk_1_75dp" />

            <TextView
                android:id="@+id/ingretabrank4_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/ingretabrank4_TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>