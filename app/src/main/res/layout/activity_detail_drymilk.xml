<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_drymilk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#67C570"
        android:paddingTop="19dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_width="49dp"
            android:layout_height="27dp"
            android:background="@drawable/home_logo"
            android:textColor="#000000"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/home_TV" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@drawable/border">

            <EditText
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:background="@null"
                android:paddingRight="10dp"
                android:id="@+id/detailmilksearch" />

            <ImageView
                android:layout_marginLeft="185dp"
                android:layout_marginTop="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/detailmilksearchgo"
                android:background="@drawable/home_search"/>

        </RelativeLayout>

        <Button
            android:layout_marginLeft="15dp"
            android:layout_width="24dp"
            android:layout_height="23dp"
           android:paddingTop="7dp"
            android:background="@drawable/home_mypage"
            android:id="@+id/detailmilkmypage" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/signup_back"
            android:id="@+id/detailmilkback"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="상세정보"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#FAFAFA"
            android:id="@+id/textView4" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="214dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/milk_IV"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/drymilk_1_75dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/miliktext_TV"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="186dp"
                        android:text="올곧게 만든 위드맘"
                        android:textColor="#67C570"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:drawablePadding="13dp"
                        android:drawableLeft="@drawable/signup_line"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/milkcompany_TV"
                        android:text="파스퇴르"
                        android:textSize="13sp"
                        android:textColor="#67C570"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="205dp"/>

                    <RatingBar
                        android:id="@+id/detailmilkrating"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="0.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/bookmark"
                        android:text="즐겨찾기"
                        android:textColor="#ffffff"
                        android:textStyle="bold"

                        android:layout_marginLeft="10dp"
                        android:background="@drawable/greenbox"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/priceInfo"
                        android:text="가격정보"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/greenbox"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"

                        android:text="리뷰작성"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/detailmilk_create_review"
                        android:background="@drawable/greenbox"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#EAEAEA" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:text="성분"
                    android:textColor="#67C570"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"/>

                <Button
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:background="@drawable/home_more"
                    android:layout_gravity="center"
                    android:id="@+id/ingredent_grade"
                    android:layout_marginLeft="150dp"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EAEAEA" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/search_ingredient"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="11dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:text="비타민 B1"
                        android:textSize="12sp"
                        android:id="@+id/ingerdent1"
                        android:textColor="#67C570"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                    <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/mypage_more"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/PageMore_BT1"/>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/search_ingredient"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingerdent2"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="11dp"

                        android:text="단백질"
                        android:textSize="12sp"
                        android:textColor="#67C570"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">

                        <Button
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/mypage_more"

                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/PageMore_BT2"/>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#EAEAEA" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:text="리뷰"
                    android:textColor="#67C570"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"/>

                <Button
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:background="@drawable/home_more"
                    android:layout_gravity="center"
                    android:layout_marginLeft="150dp"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EAEAEA" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="리뷰가 존재하지 않습니다."
                    android:textColor="#65C570"
                    android:visibility="invisible"
                    android:id="@+id/noreview"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycleview_review1"/>
            </RelativeLayout>

        </LinearLayout>

        </ScrollView>
    </LinearLayout>