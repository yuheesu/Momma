<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="70dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="1dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailcompany_milk_img"
            android:layout_weight="0.5"
            android:src="@drawable/home_drymilk_1"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SearchRecycle_Level_IV"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/green_circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:textStyle="bold"
            android:text="1"
            android:id="@+id/detailcompany_milk_stage"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="24dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/hidetext"/>


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/detailcompany_milk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="위드맘"
            android:textSize="14sp"
            android:textColor="#67C570"
            android:gravity="center_vertical"
            />


        <RatingBar
            android:id="@+id/detailcompany_milk_rating"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />
    </LinearLayout>

</LinearLayout>